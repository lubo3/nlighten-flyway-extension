<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="urn:me.jboss.flyway:1.0"
           xmlns="urn:me.jboss.flyway:1.0"
           elementFormDefault="qualified"
           attributeFormDefault="unqualified"
           version="1.0">

    <!-- The subsystem root element -->
    <xs:element name="subsystem" type="subsystemType"/>

    <xs:complexType name="subsystemType">
        <xs:choice minOccurs="0" maxOccurs="unbounded">
            <xs:element name="deployment-type" type="deployment-typeType"/>
        </xs:choice>
    </xs:complexType>
    <xs:complexType name="deployment-typeType">
        <xs:attribute name="name" use="required" type="xs:string"/>
        <xs:attribute name="dataSourceName" type="xs:string" use="optional" default="postgres"/>
    </xs:complexType>
</xs:schema>
